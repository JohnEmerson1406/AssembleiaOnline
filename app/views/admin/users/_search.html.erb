<div class="text-center">
  <%= search_form_for @q, url: admin_users_path, class: 'form-inline d-flex justify-content-center' do |f| %>
    <%= f.search_field :user_name_cont, placeholder: User.human_attribute_name(:user_name), class: 'form-control w-25' %>&nbsp;
    <%#= f.select(:role_eq, options_for_select(User.roles.to_a.map { |w| [w[0].humanize, w[1]] }), { include_blank: t('select.type') }, {class: "form-control" }) %>
    <%= f.select(:paid_eq, options_for_select([[t('yes'), true], [t('no'), false]].map { | w | [w[0].humanize, w[1]] }), { include_blank: t('select.type') }, {class: "form-control" }) %>&nbsp;
    <%= f.submit class: 'btn btn-outline-primary' %>&nbsp;
    <%= link_to "&#10799;".html_safe, request.path, class: "font-weight-bold btn btn-outline-secondary" %>
  <% end %>
</div>
