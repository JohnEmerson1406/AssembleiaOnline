<% flash.each do |key, value| %>
  <div id="notice" class="alert <%= flash_class(key) %> alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= value %>
  </div>
<% end %>

<h1>
  Assembly
  <%= link_to 'Deletar', admin_assembly_path(@assembly), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger new" %>
  <%= link_to 'Editar', edit_admin_assembly_path(@assembly), class:"btn btn-primary new" %>
  <%= link_to 'Voltar', admin_assemblies_path, class:"btn btn-secondary new" %>
  <%= link_to 'Novo(a)', new_admin_assembly_path, class:"btn btn-info new" %>
</h1>

<hr>

<p>
  <strong>Título:</strong>
  <%= @assembly.title %>
</p>

<p>
  <strong>Início:</strong>
  <%= @assembly.start_time %>
</p>

<p>
  <strong>Encerramento:</strong>
  <%= @assembly.finish_time %>
</p>

<p>
  <strong>Situação:</strong>
  <% if @assembly.state == 'open' %>
    <span class="badge badge-success">Ativa</span>
  <% elsif @assembly.state == 'close' %>
    <span class="badge badge-danger">Finalizado</span>
  <% else %>
    <span class="badge badge-warning">Rascunho</span>
  <% end %>
</p>

<p>
  <strong>Ata:</strong>
  <% if @assembly.ata.present? %>
    <%= @assembly.ata.blob.filename.sanitized %>
  <% else %>
    Sem ata
  <% end %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @assembly.description %>
</p>
