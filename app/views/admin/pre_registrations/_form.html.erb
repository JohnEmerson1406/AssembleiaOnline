<%= simple_form_for @pre_registration, url: url, method: method  do |p| %>
  <div class='row col-md-6'>
    <%= p.input :cpf %>
  </div>
  <div class='row'>
    <div class='col-md-3'>
      <%= p.input :bloc, as: :select, collection: PreRegistration::BLOC, include_blank: t('select.bloc') %>
    </div>
    <div class='col-md-3'>
      <%= p.input :ap, as: :select, collection: PreRegistration::AP, include_blank: t('select.ap') %>
    </div>
  </div>

  <hr>

  <div>
    <%= p.submit controller.action_name == 'edit' ?
      t('submit.update') + ' ' + PreRegistration.model_name.human :
      t('submit.create') + ' ' + PreRegistration.model_name.human,
      class:'btn btn-success' %>
    <%= link_to t('links.cancel'), admin_pre_registrations_path, class:'btn btn-danger' %>
  </div>
<% end %>
